    "preview:app": "pnpm --filter app preview",
    "lint:app": "pnpm --filter app lint",
    "format": "pnpm format:api && pnpm format:app",
    "format:api": "pnpm --filter api format",
    "format:app": "pnpm --filter app format",
    "migrate": "pnpm --filter api migrate"
  },
  "dependencies": {
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "eslint": "^9.18.0",
